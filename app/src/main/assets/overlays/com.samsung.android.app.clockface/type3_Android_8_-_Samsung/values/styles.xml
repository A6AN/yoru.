<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionBarTheme" parent="@*android:style/Theme.DeviceDefault">
        <item name="android:statusBarColor">@*com.samsung.android.app.clockface:color/setting_status_bar_color</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="*com.samsung.android.app.clockface:colorPrimary">@*com.samsung.android.app.clockface:color/colorPrimary</item>
    </style>
	<style name="CustomDialog" parent="@*android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowAnimationStyle">@*com.samsung.android.app.clockface:style/CustomDialogAnimation</item>
    </style>
	<style name="NoActionBarTheme" parent="@*android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:statusBarColor">@*com.samsung.android.app.clockface:color/setting_status_bar_color</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="*com.samsung.android.app.clockface:colorPrimary">@*com.samsung.android.app.clockface:color/colorPrimary</item>
    </style>
	<style name="TransparentTheme" parent="@*android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="*com.samsung.android.app.clockface:colorPrimary">@*com.samsung.android.app.clockface:color/colorPrimary</item>
    </style>
</resources>
