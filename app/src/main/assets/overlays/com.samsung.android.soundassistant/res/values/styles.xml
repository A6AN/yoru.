<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@*android:style/Theme.DeviceDefault">
        <item name="android:textColor">@*com.samsung.android.soundassistant:color/default_text_color</item>
        <item name="android:actionBarStyle">@*com.samsung.android.soundassistant:style/MusicActionBarStyle</item>
        <item name="android:statusBarColor">@*com.samsung.android.soundassistant:color/statusBarColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="*com.samsung.android.soundassistant:colorPrimary">@*com.samsung.android.soundassistant:color/colorPrimary</item>
        <item name="*com.samsung.android.soundassistant:colorPrimaryDark">@*com.samsung.android.soundassistant:color/colorPrimaryDark</item>
        <item name="*com.samsung.android.soundassistant:colorAccent">@*com.samsung.android.soundassistant:color/colorAccent</item>
    </style>
    <style name="MusicActionBarStyle" parent="@*android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:displayOptions">showTitle</item>
        <item name="android:elevation">0.0dip</item>
    </style>
    <style name="SavePresetAlert" parent="@*android:style/Theme.DeviceDefault.Dialog.Alert">
        <item name="android:windowSoftInputMode">adjustNothing|stateAlwaysHidden</item>
    </style>
</resources>
