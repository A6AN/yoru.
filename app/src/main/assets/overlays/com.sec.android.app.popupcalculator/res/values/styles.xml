<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="CalcTheme" parent="@*android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorPrimary">@*com.sec.android.app.popupcalculator:color/colorPrimary</item>
    </style>
	<style name="ConvertorTheme" parent="@*android:style/Theme.DeviceDefault">
        <item name="android:actionBarStyle">@*com.sec.android.app.popupcalculator:style/ConvertorActionBarStyle</item>
        <item name="android:statusBarColor">#ff000000</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
	<style name="ConvertorActionBarStyle" parent="@*android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:displayOptions">homeAsUp|showTitle</item>
    </style>
</resources>
