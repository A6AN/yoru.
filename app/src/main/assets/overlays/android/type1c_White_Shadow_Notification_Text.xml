<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="TextAppearance.Material.Notification" parent="@*android:style/TextAppearance.Material">
        <item name="android:textSize">@*android:dimen/notification_text_size</item>
        <item name="android:textColor">@*android:color/notification_secondary_text_color_light</item>
        <item name="android:fontFamily">sans-serif</item>
		<item name="android:shadowColor">#ffffffff</item>
		<item name="android:shadowRadius">2.0</item>
    </style>
    <style name="TextAppearance.Material.Notification.Emphasis" parent="@*android:style/TextAppearance.Material.Notification">
        <item name="android:textColor">#ffffffff</item>
		<item name="android:shadowColor">#ffffffff</item>
		<item name="android:shadowRadius">2.0</item>
    </style>
    <style name="TextAppearance.Material.Notification.Info" parent="@*android:style/TextAppearance.Material.Notification">
        <item name="android:textSize">@*android:dimen/notification_subtext_size</item>
        <item name="android:textColor">@*android:color/notification_header_text_color</item>
        <item name="android:fontFamily">sans-serif</item>
		<item name="android:shadowColor">#ffffffff</item>
		<item name="android:shadowRadius">2.0</item>
    </style>
    <style name="TextAppearance.Material.Notification.Line2" parent="@*android:style/TextAppearance.Material.Notification">
        <item name="android:textSize">@*android:dimen/notification_subtext_size</item>
		<item name="android:shadowColor">#ffffffff</item>
		<item name="android:shadowRadius">2.0</item>
    </style>
    <style name="TextAppearance.Material.Notification.Title" parent="@*android:style/TextAppearance.Material.Notification">
        <item name="android:textSize">@*android:dimen/notification_title_text_size</item>
        <item name="android:textColor">@*android:color/notification_primary_text_color_light</item>
        <item name="android:fontFamily">sans-serif</item>
		<item name="android:shadowColor">#ffffffff</item>
		<item name="android:shadowRadius">2.0</item>
    </style>
	<style name="Widget.Material.Notification.MessagingText" parent="@*android:style/Widget.Material.TextView">
        <item name="android:textAppearance">@*android:style/TextAppearance.Material.Notification</item>
        <item name="android:ellipsize">end</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:shadowColor">#ffffffff</item>
		<item name="android:shadowRadius">2.0</item>
    </style>
</resources>