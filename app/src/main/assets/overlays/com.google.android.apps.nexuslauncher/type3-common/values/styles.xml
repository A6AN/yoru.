<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseLauncherTheme" parent="@*android:style/Theme.Material.NoActionBar">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:keyboardLayout">@*com.android.launcher3:layout/search_container_all_apps</item>
        <item name="android:colorEdgeEffect">#ff000000</item>
    </style>
    <style name="LauncherTheme" parent="@*com.android.launcher3:style/BaseLauncherThemeWithCustomAttrs">
	<item name="android:textColorPrimary">@*com.android.launcher3:color/primary_text_material_dark</item>
        <item name="android:textColorSecondary">@*com.android.launcher3:color/secondary_text_material_dark</item>
        <item name="android:textColorHint">#a0ffffff</item>
        <item name="android:textColorTertiary">#ccffffff</item>
        <item name="android:colorControlHighlight">#a0ffffff</item>
        <item name="android:colorPrimary">#ff000000</item>
        <item name="*com.android.launcher3:allAppsNavBarScrimColor">#80000000</item>
        <item name="*com.android.launcher3:allAppsScrimColor">#7a212121</item>
        <item name="*com.android.launcher3:isMainColorDark">true</item>
        <item name="*com.android.launcher3:popupColorPrimary">?*android:colorPrimary</item>
        <item name="*com.android.launcher3:popupColorSecondary">#ff424242</item>
        <item name="*com.android.launcher3:popupColorTertiary">#ff757575</item>
        <item name="*com.android.launcher3:widgetsTheme">@*com.android.launcher3:style/WidgetContainerTheme.Dark</item>
        <item name="*com.android.launcher3:workspaceStatusBarScrim">@*com.android.launcher3:drawable/workspace_bg_dark</item>
    </style>
	<style name="SettingsTheme" parent="@*android:style/Theme.Material">
        <item name="android:actionBarTheme">@*com.android.launcher3:style/SettingsTheme.ActionBar</item>
        <item name="android:colorPrimary">@*com.android.launcher3:color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@*com.android.launcher3:color/colorPrimaryDark</item>
        <item name="android:colorAccent">@*com.android.launcher3:color/colorAccent</item>
        <item name="android:statusBarColor">@*com.android.launcher3:color/lollipopStatusBar</item>
    </style>
	<style name="WidgetContainerTheme" parent="@*android:style/Theme.Material">
        <item name="android:textColorPrimary">?*android:textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">?*android:textColorSecondaryInverse</item>
        <item name="android:textColorPrimaryInverse">@*com.android.launcher3:color/primary_text_material_light</item>
        <item name="android:textColorSecondaryInverse">@*com.android.launcher3:color/secondary_text_material_light</item>
        <item name="android:colorPrimary">@*com.android.launcher3:color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@*com.android.launcher3:color/colorPrimaryDark</item>
        <item name="android:colorAccent">@*com.android.launcher3:color/colorAccent</item>
        <item name="android:colorEdgeEffect">?*android:textColorSecondaryInverse</item>
        <item name="*com.android.launcher3:bottomSheetNavBarColor">@*com.android.launcher3:color/all_apps_navbar_color</item>
    </style>
</resources>
